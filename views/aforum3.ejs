<html>

<head>
	<title>Babyhub</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/assets/css/forum.css" />
	<link rel="icon" href="/images/logo.png" type="image/ico" />
	<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
	<link href="/assets/css/style.css" rel="stylesheet">
</head>

<body class="is-preload">
	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header -->
		<header id="header">
			<a href="/">
				<img class="textlogopic" src="/images/textlogo.png">
			</a>
			<nav class="main">
				<ul>
					<li class="menu">
						<a class="fa-bars" href="#menu">Menu</a>
					</li>
				</ul>
			</nav>
		</header>

		<!-- Menu -->
		<section id="menu">

			<!-- Links -->
			<section>
				<ul class="links">
					<li>
						<a href="/childEducation3">
							<h3>小孩教育</h3>
							<p>提供小孩教育的知識。</p>
						</a>
					</li>
					<li>
						<a href="/pregnancyKnowledge3">
							<h3>孕期知識</h3>
							<p>孕期知識、胎教等。</p>
						</a>
					</li>
					<li>
						<a href="/forum3">
							<h3>討論區</h3>
							<p>跟媽媽們討論各種知識。</p>
						</a>
					</li>
				</ul>
			</section>
			<!-- Actions -->
			<section>
				<ul class="actions stacked">
					<li>
						<a href="/mlogout" class="button large fit">登出 Logout</a>
					</li>
				</ul>
			</section>
			<!-- Footer -->
			<section id="footer">
				<ul class="icons">
					<li><a href="https://www.instagram.com/vivian_0124/" class="fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="mailto:jashtinshen0729@gmail.com" class="fa-envelope"><span class="label">Email</span></a></li>
					<li><a href="https://github.com/tomlinNTUB" class="fa-github-square"><span class="label">github</span></a></li>
					<li><a href="tel:0983960930" class="fa-phone"><span class="label">github</span></a></li>
					<li><a href="https://www.facebook.com/profile.php?id=100008400780348" class="fa-facebook"><span class="label">Facebook</span></a></li>
				</ul>
				<p class="copyright">2018 Copyright&copy;NTUB tomlin.</p>
			</section>

		</section>

		<!-- Main -->
		<div id="main">
            <div class="row">                
                <div class="col-md-12">
                        <article class="post">
								<header>
									<div class="title">
										<h2><a href="#"><%= result.aforum.forumname %></a></h2>										
									</div>
									<div class="meta">
										<time class="published" datetime="2015-11-01"><%= result.aforum.forumdatetime %></time>
										<a href="#" class="author"><span class="name"><%= result.cnt.username %></span><img src="/images/avatar.jpg" alt="" /></a>
									</div>
								</header>								
								<p><%= result.aforum.content %></p>
								<footer>
									<ul class="stats">                                      
										<a href="#" class="icon fa-heart-o"> <%= result.cnt.cntlike %></a>
										<a href="#" class="icon fa-comments-o"> <%= result.cnt.cntcomment %></a>	
										<a href="#" class="icon fa-trash" id="deleteForum"></a>	
										<a href="#" class="icon fa-edit"></a>					
                                    </ul>
                                </footer>                                
                        </article>
				</div>
                <div class="col-md-12">                            
                    <article class="message">
							<h3>留言回應</h3> 
								<% for(var i=0; i<result.com.length; i++) {%>
									<div class="list-group-item">                                    
										<p><a href="#" class="author"><img src="/images/avatar.jpg" alt="">
											<span class="mesname"><%= result.com[i].username %></span></a></p>                                                             
											<div class="col-md-12">
												<p><%= result.com[i].content %></p>
											</div>
									</div> 
								<% } %>
                    </article>                           
            	</div>

                
            </div>
            
		</div>


	</div>

		<!-- Scripts -->
		<script src="/assets/js/jquery.min.js"></script>
		<script src="/assets/js/browser.min.js"></script>
		<script src="/assets/js/breakpoints.min.js"></script>
		<script src="/assets/js/util.js"></script>
		<script src="/assets/js/main.js"></script>
		<script src="/assets/js/bootstrap.min.js"></script>
		<script src="/assets/js/scripts.js"></script>

</body>

</html>