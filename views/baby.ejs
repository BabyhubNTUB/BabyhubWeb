<html>

<head>
	<title>Babyhub</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/assets/css/main.css" />
	<link rel="icon" href="/images/logo.png" type="image/ico" />
	<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
	<link href="/assets/css/style.css" rel="stylesheet">
</head>

<body class="is-preload">

	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header -->
		<header id="header">
			<a href="/homepage">
				<img class="textlogopic" src="/images/textlogo.png">
			</a>
			<nav class="main">
				<ul>
					<li class="bell">
						<a class="fa-bell" href="#menu">Bell</a>
					</li>
					<li class="bell">
						<a class="fa-user" href="/profile">Bell</a>
					</li>
					<li class="menu">
						<a class="fa-bars" href="#menu">Menu</a>
					</li>
				</ul>
		</div>
		</header>
		
		<!-- Menu -->
		<section id="menu">

			<!-- Links -->
			<section>
				<ul class="links">
					<li>
						<a href="/childEducation">
							<h3>小孩教育</h3>
							<p>提供小孩教育的知識。</p>
						</a>
					</li>
					<li>
						<a href="/pregnancyKnowledge">
							<h3>孕期知識</h3>
							<p>孕期知識、胎教等。</p>
						</a>
					</li>
					<li>
						<a href="/forum">
							<h3>討論區</h3>
							<p>跟媽媽們討論各種知識。</p>
						</a>
					</li>
					<li>
						<a href="/growrecord">
							<h3>成長紀錄</h3>
							<p>填寫寶寶的身體變化吧！</p>
						</a>
					</li>
					<li>
						<a href="/diary">
							<h3>日記</h3>
							<p>填寫寶寶每日的生活小點滴吧！</p>
						</a>
					</li>
				</ul>
			</section>
			<!-- Actions -->
			<section>
				<ul class="actions stacked">
					<li>
						<a href="/logout" class="button large fit">登出 Logout</a>
					</li>
				</ul>
			</section>
			<!-- Footer -->
			<section id="footer">
				<ul class="icons">
					<li><a href="https://www.instagram.com/vivian_0124/" class="fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="mailto:jashtinshen0729@gmail.com" class="fa-envelope"><span class="label">Email</span></a></li>
					<li><a href="https://github.com/tomlinNTUB" class="fa-github-square"><span class="label">github</span></a></li>
					<li><a href="tel:0983960930" class="fa-phone"><span class="label">github</span></a></li>
					<li><a href="https://www.facebook.com/profile.php?id=100008400780348" class="fa-facebook"><span class="label">Facebook</span></a></li>
				</ul>
				<p class="copyright">2018 Copyright&copy;NTUB tomlin.</p>
			</section>

		</section>

		<!-- Main -->
		<div id="main">
            <div class="container-fluid">
                <div class="row">
					<div class="col-md-1">
					</div>
                    <div class="col-md-2">
                        <div class="profilePage">
							<img src="/images/baby1.jpg">
						</div>
							<ul class="links">
								<li>
									<a href="/addbaby">
										<h4>新增寶寶</h4>
									</a>
									<ul class="links">
										<% for(var i=0; i<result.list.length; i++) {%>
											<li>
												<a href="/baby/<%= result.list[i].babyno %>">
													<strong><%= result.list[i].name %></strong>
												</a>
											</li>
										<% } %>
									</ul>
								</li>
								<% for(var i=0; i<result.baby.length; i++) {%>
								<li>
									<a href="/babysetting/<%= result.baby[i].babyno %>">
										<h4>寶寶設定</h4>
									</a>
								</li>
								<li>
									<a href="/recordcart/<%= result.baby[i].babyno %>">
										<h4>成長紀錄圖表</h4>
									</a>
								</li>
								<% } %>
								<li>
									<a href="/profile">
										<h4>回會員</h4>
									</a>
								</li>
							</ul>
                        
                    </div>
                    <div class="col-md-7">
						<% for(var i=0; i<result.baby.length; i++) {%>
							<div class="profile_box">
								<p class="head"><img src="/images/membership.png">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= result.baby[i].name %></p>
								<p class="title">性別：　<%= result.baby[i].gender %></p><br />
								<p class="title">生日：　<%= result.baby[i].birthday %></p><br />
						<% } %>
							</div>
						
						<% for(var i=0; i<result.baby.length; i++) {%>
                        <div class="card" style="background: none;">
							<div class="card-block">
								<h5 class="card-title">
									成長記錄
								</h5>
								<form action="/grecord_add" method="post">
									<div class="form-group">
										<p class="card-text">
												(今天)
												<input type="text" class="form-control" name="babyno" value="<%= result.baby[i].babyno %>" hidden/>
												<br> 寶　寶：
												<input name="baby" type="text-inline" value="<%= result.baby[i].name %>" style="background: none;" readonly>
												<br> 身　長：
												<input name="height" type="number" style="background: none;">　cm
												<br> 體　重：
												<input name="weight" type="number" style="background: none;">　kg
												<br> 喝奶量：
												<input name="drinkmilk" type="number" style="background: none;">　cc
											</p>
									</div>
									<button type="submit">
										撰寫
									</button>
								</form>
								
								</div>
							</div>
						</div>
						<% } %>
					</div>	
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
		</div>
	</div>	

		<!-- Scripts -->
		<script src="/assets/js/jquery.min.js"></script>
		<script src="/assets/js/browser.min.js"></script>
		<script src="/assets/js/breakpoints.min.js"></script>
		<script src="/assets/js/util.js"></script>
		<script src="/assets/js/main.js"></script>
		<script src="/assets/js/bootstrap.min.js"></script>
		<script src="/assets/js/scripts.js"></script>

</body>

</html>