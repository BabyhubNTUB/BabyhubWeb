<html>

<head>
	<title>Babyhub</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="assets/css/forum.css" />
	<link rel="icon" href="images/bear.png" type="image/ico" />
	<link href="assets/css/bootstrap.min.css" rel="stylesheet">
	<link href="assets/css/style.css" rel="stylesheet">
</head>

<body class="is-preload">
	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header -->
		<header id="header">
			<a href="/">
				<img class="textlogopic" src="images/textlogo.png">
			</a>
			<nav class="main">
				<ul>
					<li class="menu">
						<a class="fa-bars" href="#menu">Menu</a>
					</li>
				</ul>
			</nav>
		</header>

		<!-- Menu -->
		<section id="menu">

			<!-- Links -->
			<section>
				<ul class="links">
					<li>
						<a href="/childEducation2">
							<h3>小孩教育</h3>
							<p>提供小孩教育的知識。</p>
						</a>
					</li>
					<li>
						<a href="/pregnancyKnowledge2">
							<h3>孕期知識</h3>
							<p>孕期知識、胎教等。</p>
						</a>
					</li>
					<li>
						<a href="/forum2">
							<h3>討論區</h3>
							<p>跟媽媽們討論各種知識。</p>
						</a>
					</li>
				</ul>
			</section>
			<!-- Actions -->
			<section>
				<ul class="actions stacked">
					<li>
						<a href="/signIn" class="button large fit">登入 Sign In</a>
					</li>
					<li>
						<a href="/register" class="button large fit">註冊 Register</a>
					</li>
				</ul>
			</section>
			<!-- Footer -->
			<section id="footer">
				<ul class="icons">
					<li><a href="mailto:10456015@ntub.edu.tw" class="fa-envelope"><span class="label">Email</span></a>
					</li>
					<li><a href="https://github.com/BabyhubNTUB" class="fa-github-square"><span
								class="label">github</span></a></li>
				</ul>
				<p class="copyright">Copyright&copy;NTUB IMD 108509</p>
			</section>

		</section>

		<!-- Main -->
		<div class="main">
			<div class="row">
				<div class="col-md-6">
					<h1 style="padding-top:2%;">討論區</h1>
				</div>
				<div class="col-md-6">
					<!-- Search -->
					<section>
						<form class="search" method="get" action="/search">
							<input type="number" name="check" value="2" hidden />
							<input type="text" name="keyword" style="padding-left: 20%;" />
							<button type="submit"
								style="width:80px; height:40px; text-align: center; padding: 5px; font-family:'Noto Sans TC', sans-serif; font-weight:normal; margin-right:0; ">搜尋</button>
						</form>
					</section>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<ul class="boardtag">
						<% for(var i=0; i<result.type.length; i++) {%>
						<form class="forumtype" method="get" action="/forumtype">
							<input type="number" name="check" value="2" hidden />
							<input type="text" name="type" value="<%=result.type[i].typeno %>" hidden />
							<li><button
									style="background-color: transparent; padding: 0; height: auto; box-shadow:none;"
									type="submit"><a><%= result.type[i].name %></a></button></li>
						</form>
						<% } %>
					</ul>
				</div>
				<div class="col-md-12">
					<div class="content">
						<table>
							<tr>
								<td>分類</td>
								<td>標題</td>
								<td>喜歡</td>
								<td>回覆</td>
								<td>發表人</td>
								<td>發文日期</td>
							</tr>
							<% for(var i=0; i<result.forum.length; i++) {%>
							<tr>
								<td><%= result.forum[i].name %></td>
								<td><a
										href="/aforum2/<%= result.forum[i].forumno %>"><%= result.forum[i].forumname %></a>
								</td>
								<td><%= result.forum[i].cntlike %></td>
								<td><%= result.forum[i].cntcomment %></td>
								<td><%= result.forum[i].username %></td>
								<td><%= result.forum[i].forumdatetime %></td>
							</tr>
							<% } %>

							<tr>
								<td>廣告</td>
								<td><a href="#">頂級澳洲奶粉，給寶寶非凡的享受！</a></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
							</tr>

						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Scripts -->
	<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/browser.min.js"></script>
	<script src="assets/js/breakpoints.min.js"></script>
	<script src="assets/js/util.js"></script>
	<script src="assets/js/main.js"></script>
	<script src="assets/js/bootstrap.min.js"></script>
	<script src="assets/js/scripts.js"></script>

</body>

</html>