<html>

<head>
	<title>Babyhub</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/assets/css/forum.css" />
	<link rel="icon" href="/images/bear.png" type="image/ico" />
	<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
	<link href="/assets/css/style.css" rel="stylesheet">

	<!-- addforum按鈕 -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script type="text/javascript">
		// 當頁面打開後就顯示
		$(function () {
			$('#addforum').show();
		});
		// gotop按鈕
		// 當頁面打開後就顯示
		$(function () {
			$('#gotop').show();
			/* 按下GoTop按鈕時的事件 */
			$('#gotop').click(function () {
				$('html,body').animate({ scrollTop: 0 }, 'slow');   /* 返回到最頂上 */
				return false;
			});
		});
	</script>

</head>

<body class="is-preload">
	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header -->
		<header id="header">
			<a href="/homepage">
				<img class="textlogopic" src="/images/textlogo.png">
			</a>
			<nav class="main">
				<ul>
					<li class="profile" id="profile">
						<a class="fa-bell">Bell</a>
					</li>
					<li class="bell">
						<a class="fa-user" href="/profile">Bell</a>
					</li>
					<li class="menu">
						<a class="fa-bars" href="#menu">Menu</a>
					</li>
				</ul>
			</nav>
		</header>
		<div class="profile" id="profileList">
			<% for(var i=0; i<noti.length; i++) {%>
			<div class="profileList">
				<div class="list-group-item">
					<a href="/aforum/<%= noti[i].forumno %>">
						<span><%= noti[i].content %></span>
					</a>
				</div>
			</div>
			<% } %>
		</div>
		<!-- Menu -->
		<section id="menu">

			<!-- Links -->
			<section>
				<ul class="links">
					<li>
						<a href="/childEducation">
							<h3>小孩教育</h3>
							<p>提供小孩教育的知識。</p>
						</a>
					</li>
					<li>
						<a href="/pregnancyKnowledge">
							<h3>孕期知識</h3>
							<p>孕期知識、胎教等。</p>
						</a>
					</li>
					<li>
						<a href="/forum">
							<h3>討論區</h3>
							<p>跟媽媽們討論各種知識。</p>
						</a>
					</li>

					<li>
						<a href="/growrecord">
							<h3>成長紀錄</h3>
							<p>填寫寶寶的身體變化吧！</p>
						</a>
					</li>
					<li>
						<a href="/diary">
							<h3>日記</h3>
							<p>填寫寶寶每日的生活小點滴吧！</p>
						</a>
					</li>
				</ul>
			</section>
			<!-- Actions -->
			<section>
                <ul class="actions stacked">
                    <li style="text-align: center; ">
                        <a>加入我們的LineBOT!</a>
                        <a href="http://line.me/ti/p/@777ddoex"><img class="textlogopic" src="/images/QRcode.jpg"></a>
                        <a href="/logout" class="button large fit">登出 Logout</a>
                    </li>
                </ul>
            </section>
			<!-- Footer -->
			<section id="footer">
				<ul class="icons">
					<li><a href="mailto:10456015@ntub.edu.tw" class="fa-envelope"><span class="label">Email</span></a>
					</li>
					<li><a href="https://github.com/BabyhubNTUB" class="fa-github-square"><span
								class="label">github</span></a></li>
				</ul>
				<p class="copyright">Copyright&copy;NTUB IMD 108509</p>
			</section>

		</section>

		<!-- Main -->

		<div id="main">
			<div class="row">
				<div class="col-md-6">
					<h1 style="padding-top:2%;"><a href="/forum" style="font-weight: 500;">討論區</a></h1>
				</div>
				<div class="col-md-6">
					<!-- Search -->
					<section>
						<form class="search" method="get" action="/search">
							<input type="number" name="check" value="1" hidden />
							<input type="text" name="keyword" style="padding-left: 20%;" placeholder="請輸入文章標題關鍵字"/>
							<button type="submit"
								style="width:80px; height:40px; text-align: center; padding: 5px; font-family:'Noto Sans TC', sans-serif; font-weight:normal; margin-right:0; ">搜尋</button>
							</form>
					</section>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<ul class="boardtag">
						<% for(var i=0; i<result.type.length; i++) {%>
						<form class="forumtype" method="get" action="/forumtype">
							<input type="number" name="check" value="1" hidden />
							<input type="text" name="type" value="<%=result.type[i].typeno %>" hidden />
							<li><button
									style="background-color: transparent; padding: 0; height: auto; box-shadow:none;"
									type="submit"><a><%= result.type[i].name %></a></button></li>
						</form>
						<% } %>
					</ul>
				</div>
				<div class="col-md-12">
					<div class="content">
						<table>
							<tr>
								<td>分類</td>
								<td>標題</td>
								<td>喜歡</td>
								<td>回覆</td>
								<td>發表人</td>
								<td>發文日期</td>
							</tr>
							<% for(var i=0; i<result.forum.length; i++) {%>
							<tr>
								<td><%= result.forum[i].name %></td>
								<td><a
										href="/aforum/<%= result.forum[i].forumno %>"><%= result.forum[i].forumname %></a>
								</td>
								<td><%= result.forum[i].cntlike %></td>
								<td><%= result.forum[i].cntcomment %></td>
								<td><%= result.forum[i].username %></td>
								<td><%= result.forum[i].forumdate %></td>
							</tr>
							<% } %>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- addforum按鈕 -->
	<a href="/addforum" id="addforum">
		<i class="fa fa-pencil"></i>
	</a>
	<!-- gotop按鈕 -->
	<a id="gotop">
		<i class="fa fa-angle-up"></i>
	</a>
	<!-- Scripts -->
	<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/browser.min.js"></script>
	<script src="assets/js/breakpoints.min.js"></script>
	<script src="assets/js/util.js"></script>
	<script src="assets/js/main.js"></script>
	<script src="assets/js/bootstrap.min.js"></script>
	<script src="assets/js/scripts.js"></script>

</body>

</html>