							<td></td>
							<td></td>
							<td></td>
						</tr>
						
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- addforum按鈕 -->
	<a href="/addforum" id="addforum">
		<i class="fa fa-pencil"></i>
	</a>
	<!-- gotop按鈕 -->
	<a id="gotop">
		<i class="fa fa-angle-up"></i>
	</a>
		<!-- Scripts -->
		<script src="assets/js/jquery.min.js"></script>
