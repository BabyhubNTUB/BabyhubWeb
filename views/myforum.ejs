<html>

<head>
    <title>Babyhub</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link rel="icon" href="/images/bear.png" type="image/ico" />
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
</head>

<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
		<header id="header">
			<a href="/homepage">
				<img class="textlogopic" src="/images/textlogo.png">
			</a>
			<nav class="main">
				<ul>
					<li class="profile" id="profile">
						<a class="fa-bell">Bell</a>
					</li>
					<li class="bell">
						<a class="fa-user" href="/profile">Bell</a>
					</li>
					<li class="menu">
						<a class="fa-bars" href="#menu">Menu</a>
					</li>
				</ul>
			</nav>
		</header>
		<div class="profile" id="profileList">
			<% for(var i=0; i<noti.length; i++) {%>
			<div class="profileList">
				<div class="list-group-item">
					<a href="/aforum/<%= noti[i].forumno %>">
						<span><%= noti[i].content %></span>
					</a>
				</div>
			</div>
			<% } %>
		</div>
        <!-- Menu -->
        <section id="menu">

            <!-- Links -->
            <section>
                <ul class="links">
                    <li>
                        <a href="/childEducation">
                            <h3>小孩教育</h3>
                            <p>提供小孩教育的知識。</p>
                        </a>
                    </li>
                    <li>
                        <a href="/pregnancyKnowledge">
                            <h3>孕期知識</h3>
                            <p>孕期知識、胎教等。</p>
                        </a>
                    </li>
                    <li>
                        <a href="/forum">
                            <h3>討論區</h3>
                            <p>跟媽媽們討論各種知識。</p>
                        </a>
                    </li>
                    <li>
                        <a href="/growrecord">
                            <h3>成長紀錄</h3>
                            <p>填寫寶寶的身體變化吧！</p>
                        </a>
                    </li>
                    <li>
                        <a href="/diary">
                            <h3>日記</h3>
                            <p>填寫寶寶每日的生活小點滴吧！</p>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- Actions -->
            <section>
                <ul class="actions stacked">
                    <li style="text-align: center; ">
                        <a>加入我們的LineBOT!</a>
                        <img class="textlogopic" src="/images/QRcode.jpg" >
                        <a href="/logout" class="button large fit">登出 Logout</a>
                    </li>
                </ul>
            </section>
            <!-- Footer -->
            <section id="footer">
                <ul class="icons">
                    <li><a href="mailto:10456015@ntub.edu.tw" class="fa-envelope"><span class="label">Email</span></a>
                    </li>
                    <li><a href="https://github.com/BabyhubNTUB" class="fa-github-square"><span
                                class="label">github</span></a></li>
                </ul>
                <p class="copyright">Copyright&copy;NTUB IMD 108509</p>
            </section>

        </section>

        <!-- Main -->
        <div id="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <div class="profilePage">
                            <img alt="Bootstrap Image Preview" src="/images/<%= result.user.photo %>" />
                        </div>
                        <ul class="links">
                            <li>
                                <a href="/addbaby">
                                    <h4>新增寶寶</h4>
                                </a>
                                <ul class="links">
                                    <% for(var i=0; i<result.baby.length; i++) {%>
                                    <li>
                                        <a href="/baby/<%= result.baby[i].babyno %>">
                                            <strong><%= result.baby[i].name %></strong>
                                        </a>
                                    </li>
                                    <% } %>
                                </ul>
                            </li>
                            <li>
                                <a href="/profilesetting">
                                    <h4>會員設定</h4>
                                </a>
                            </li>
                            <li>
                                <a href="/myforum">
                                    <h4>我的文章</h4>
                                </a>
                            </li>
                            <li>
                                <a href="/profile">
                                    <h4>回會員</h4>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-9">
                        <div class="list-group">
                            <a class="list-group-item list-group-item-info">我的文章</a>
                            <% for(var i=0; i<result.forum.length; i++) {%>
                            <div class="list-group-item">
                                <div class="col-md-6">
                                    <a
                                        href="/aforum/<%= result.forum[i].forumno %>"><%= result.forum[i].forumname %></a>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="forumno"
                                        value="<%= result.forum[i].forumno %>" hidden />
                                    <button type="submit" style="box-shadow:none; float:right; height: 5%;">
                                        <a href="/editmyforum/<%= result.forum[i].forumno %>">編輯</a>
                                    </button>
                                    <form action="/for_del" method="post">
                                        <input type="text" class="form-control" name="forumno"
                                            value="<%= result.forum[i].forumno %>" hidden />
                                        <button type="submit" style="box-shadow:none; float:right; height: 5%;">
                                            <a>刪除</a>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/browser.min.js"></script>
    <script src="/assets/js/breakpoints.min.js"></script>
    <script src="/assets/js/util.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    <script src="/assets/js/scripts.js"></script>

</body>

</html>